[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
After=network-online.target

[Service]
EnvironmentFile=-/etc/default/k3s
Type=notify
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
ExecStart=/usr/local/bin/k3s server \
  --data-dir {{ k3s_server_location }} \
  --secrets-encryption \
  --tls-san {{ k3s_apiserver_fqdn }} \
{% if ansible_hostname == k3s_cluster_init_node %}  --cluster-init \
{% else %}  --server https://{{ k3s_apiserver_address }}:6443 \
{% endif %}  {{ k3s_server_extra_args | default("") }}
KillMode=process
Delegate=yes
# Having non-zero Limit*s causes performance problems due to accounting overhead
# in the kernel. We recommend using cgroups to do container-local accounting.
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
